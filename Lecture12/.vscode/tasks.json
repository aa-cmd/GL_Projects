{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/../buildLecture12"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn" : [
                "generatebuildFolder"
            ]
        },
        {
            "label" : "generatebuildFolder",
            "type": "shell",
            "command" : "mkdir",
            "options": {
                "cwd": "${workspaceFolder}/.."                
            },
            "args": [
                "-p",
                "buildLecture12"
            ],            
        },
        {
            "label": "Make",
            "type": "shell",
            "command" : "make",
            "options": {
                "cwd": "${workspaceFolder}/../buildLecture12"
            },
            "args": [
                "-l"
            ]
        }
    ]
}